<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.hospitalcore.model">

    <class name="OpdNumbersGenerator" table="ehr_opd_numbers" batch-size="500">

        <id name="opdNumberGeneratorId" type="int" column="opd_number_id"
            unsaved-value="0">
            <generator class="native" />
        </id>
        <property name="patientId" column="patient_id" />
        <property name="opdNumber" column="opd_number" length="255" />
        <property name="dateCreated" column="date_created"  />
        <property name="createdBy" column="created_by"  />
    </class>
</hibernate-mapping>